<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFragment">

    <TextView
        android:id="@+id/resultView"
        android:layout_width="match_parent"
        android:layout_height="228dp"
        android:gravity="bottom|right"
        android:hint="0123456789"
        android:textColor="@color/black"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/clearButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/light_gray"
        android:gravity="center"
        android:text="AC"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@id/number8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/resultView" />

    <TextView
        android:id="@+id/negativeOrPositive"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/light_gray"
        android:gravity="center"
        android:text="+ / -"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@id/number9"
        app:layout_constraintStart_toEndOf="@id/number7"
        app:layout_constraintTop_toBottomOf="@id/resultView" />

    <TextView
        android:id="@+id/percent"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/light_gray"
        android:gravity="center"
        android:text="%"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@id/multiply"
        app:layout_constraintStart_toEndOf="@id/number8"
        app:layout_constraintTop_toBottomOf="@id/resultView" />

    <TextView
        android:id="@+id/division"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/light_gray"
        android:gravity="center"
        android:text="÷"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/number9"
        app:layout_constraintTop_toBottomOf="@id/resultView" />

    <TextView
        android:id="@+id/number7"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/light_gray"
        android:gravity="center"
        android:text="7"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@id/number8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clearButton" />

    <TextView
        android:id="@+id/number8"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/light_gray"
        android:gravity="center"
        android:text="8"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@id/number9"
        app:layout_constraintStart_toEndOf="@id/number7"
        app:layout_constraintTop_toBottomOf="@id/negativeOrPositive" />

    <TextView
        android:id="@+id/number9"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/light_gray"
        android:gravity="center"
        android:text="9"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@id/multiply"
        app:layout_constraintStart_toEndOf="@id/number8"
        app:layout_constraintTop_toBottomOf="@id/percent" />

    <TextView
        android:id="@+id/multiply"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/light_gray"
        android:gravity="center"
        android:text="X"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/number9"
        app:layout_constraintTop_toBottomOf="@id/division" />

    <TextView
        android:id="@+id/number4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/light_gray"
        android:gravity="center"
        android:text="4"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@id/number8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/number7" />

    <TextView
        android:id="@+id/number5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/light_gray"
        android:gravity="center"
        android:text="5"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@id/number9"
        app:layout_constraintStart_toEndOf="@id/number7"
        app:layout_constraintTop_toBottomOf="@id/number8" />

    <TextView
        android:id="@+id/number6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/light_gray"
        android:gravity="center"
        android:text="6"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@id/multiply"
        app:layout_constraintStart_toEndOf="@id/number8"
        app:layout_constraintTop_toBottomOf="@id/number9" />

    <TextView
        android:id="@+id/subtraction"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/light_gray"
        android:gravity="center"
        android:text="−"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/number9"
        app:layout_constraintTop_toBottomOf="@id/multiply" />

    <TextView
        android:id="@+id/number1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/light_gray"
        android:gravity="center"
        android:text="1"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@id/number8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/number4" />

    <TextView
        android:id="@+id/number2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/light_gray"
        android:gravity="center"
        android:text="2"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@id/number9"
        app:layout_constraintStart_toEndOf="@id/number7"
        app:layout_constraintTop_toBottomOf="@id/number5" />

    <TextView
        android:id="@+id/number3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/light_gray"
        android:gravity="center"
        android:text="3"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@id/multiply"
        app:layout_constraintStart_toEndOf="@id/number8"
        app:layout_constraintTop_toBottomOf="@id/number6" />

    <TextView
        android:id="@+id/addition"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/light_gray"
        android:gravity="center"
        android:text="+"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/number9"
        app:layout_constraintTop_toBottomOf="@id/subtraction" />

    <TextView
        android:id="@+id/number0"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="@color/light_gray"
        android:gravity="center"
        android:text="0"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@id/number9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/number1" />

    <TextView
        android:id="@+id/numberDot"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/light_gray"
        android:gravity="center"
        android:text="."
        android:textSize="50sp"
        app:layout_constraintEnd_toStartOf="@id/multiply"
        app:layout_constraintStart_toEndOf="@id/number8"
        app:layout_constraintTop_toBottomOf="@id/number3" />

    <TextView
        android:id="@+id/equal"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/light_gray"
        android:gravity="center"
        android:text="="
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/number9"
        app:layout_constraintTop_toBottomOf="@id/addition" />

</androidx.constraintlayout.widget.ConstraintLayout>